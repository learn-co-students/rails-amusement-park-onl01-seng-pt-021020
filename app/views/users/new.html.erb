<h1>Sign Up</h1><br>

<%= form_for :user do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
    <br>
    <%= f.label :password %><br>
    <%= f.password_field :password, id: "password" %>
    <br>
    <%= f.label :tickets %><br>
    <%= f.number_field :tickets %>
    <br>
    <%= f.label :happiness, "How happy are you? (1-5 Scale)" %><br>
    <%= f.number_field :happiness %>
    <br>
    <%= f.label :nausea, "How nauseous are you? (1-5 Scale)" %><br>
    <%= f.number_field :nausea %>
    <br>
    <%= f.label :height, "How tall are you? (in inches)" %><br>
    <%= f.number_field :height %>
    <br>
    <%= f.label :admin, "Check box if you are the theme park owner" %>
    <%= f.check_box :admin %>
    <br>

    <%= f.submit "Create User" %>
<% end %>

