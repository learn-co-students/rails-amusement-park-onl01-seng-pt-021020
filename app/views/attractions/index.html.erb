<p id="notice"><%= notice %></p>

<h1>Attractions</h1>

<table class="table">
  <thead>
    <tr class="row">
      <th scope="col" class="col-4">Name</th>
      <th scope="col" class="text-center col-1">Tickets</th>
      <th scope="col" class="text-right col-4">Details</th>
    </tr>
  </thead>

  <tbody>
    <%= @attractions.each do |a| %>
      <tr class="row">
        <td class="col-4"><%= a.name %></td>
        <td class="text-center col-1"><%= a.tickets %></td>

        <% if current_user.admin %>
          <td><%= link_to "Show #{a.name}", attraction_path(a) %></td>
        <% else %>
          <td><%= link_to "Go on #{a.name}", attraction_path(a) %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Create New Attraction", new_attraction_path %>
