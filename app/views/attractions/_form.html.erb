<%= form_for @attraction do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    
    <%= f.label :tickets, "How many tickets will this attraction cost to ride?" %>
    <%= f.number_field :tickets %>
    <br>

    <%= f.label :min_height, "The minimum height required to ride." %>
    <%= f.number_field :min_height %>
    <br>

    <%= f.label :nausea_rating, "How nausea-inducing is the ride on a scale of 1-5?" %>
    <%= f.number_field :nausea_rating %>
    <br>

    <%= f.label :happiness_rating, "How happy does this make riders on a scale of 1-5?" %>
    <%= f.number_field :happiness_rating %>
    <br>

    <%= f.submit class: "btn-primary" %>
<% end %>